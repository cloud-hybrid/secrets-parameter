{
    "name": "@cloud-technology/secrets-parameter",
    "private": false,
    "version": "0.0.1",
    "type": "module",
    "main": "unit-testing/index.js",
    "description": "Interface Extension of `Parameter` for AWS Secrets-Manager",
    "types": "distribution",
    "repository": {
        "type": "git",
        "directory": ".",
        "url": "https://github.com/cloud-hybrid/secrets-parameter.git"
    },
    "license": "BSD 1-Clause License",
    "author": "Jacob B. Sanders",
    "scripts": {
        "test": "node unit-testing",
        "start": "node unit-testing/watch",
        "watch": "node unit-testing/watch",
        "build": "tsc --watch",
        "compile": "tsc",
        "clean": "rm -rf node_modules declarations distribution .idea .vscode .eclipse",
        "upload": "npm publish --access public",
        "reinstall": "npm update && npm install --global --force",
        "prepublishOnly": "npm run clean && npm install --silent && npm run compile"
    },
    "dependencies": {
        "@cloud-technology/parameter": "latest"
    },
    "devDependencies": {
        "@types/node": "latest",
        "@jest/globals": "latest",
        "@types/jest": "latest",
        "jest": "latest",
        "ts-jest": "latest",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/experimental-utils": "latest",
        "@typescript-eslint/parser": "latest",
        "@typescript-eslint/scope-manager": "latest",
        "@typescript-eslint/type-utils": "latest",
        "@typescript-eslint/typescript-estree": "latest",
        "eslint": "latest",
        "node-notifier": "latest",
        "ts-node": "latest",
        "tslib": "latest",
        "typescript": "latest",
        "typescript-eslint-language-service": "latest"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "no-case-declarations": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/explicit-function-return-type": 0,
            "@typescript-eslint/no-use-before-define": 0,
            "@typescript-eslint/no-empty-interface": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-empty-function": 0,
            "@typescript-eslint/no-unused-vars": 0,
            "@typescript-eslint/no-inferrable-types": 0,
            "@typescript-eslint/ban-types": 0,
            "@typescript-eslint/ban-ts-comment": 0,
            "no-sequences": "error"
        },
        "ignorePatterns": [
            "ci",
            "dist",
            "coverage",
            "distribution",
            "node_modules"
        ]
    },
    "bin": {
        "secrets-parameter": "unit-testing/index.js"
    }
}
